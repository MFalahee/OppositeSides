{
  "compilerOptions": {
    "module": "esnext",
    "allowJs": true,
    "noEmit": true,
    "checkJs": true,
    "noImplicitAny": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "typeRoots": [
      "custom.d.ts",
      "./node_modules/@googlemaps/typescript-guards/dist/index.d.ts",
      "./node_modules@googlemaps\react-wrapperdistsrcindex.d.ts",
      "./node_modules/@react-three/drei/index.d.ts",
      "./node_modules/postprocessing/types/postprocessing.d.ts"
    ],
    "experimentalDecorators": true,
    "target": "es6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": ["./src/**/*.ts", "src/**/*.tsx", "CustomTypesIndex", "./src/custom.d.ts", "./src/svgmodule.d.ts"],
  "exclude": ["./node_modules/", "**/*.test.ts"]
}
